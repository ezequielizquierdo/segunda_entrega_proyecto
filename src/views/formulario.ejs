<!-- Incluyo el partial creado para el header a traves de include el encabezado.ejs -->
<header>
  <%- include('./partials/encabezado.ejs') %>
  <script src="/socket.io/socket.io.js"></script>
  <script src="js/main.js"></script>
  <link href="/css/style.css" rel="stylesheet" type="text/css">
</header>

<body>
  <div class="container mt-3">
    <div class="jumbotron">
      <h1 style="color: blue">Ingresa el producto</h1>
      <br />

      <form action="/productos" method="post">
        <!-- Campo nombre del producto -->
        <div class="form-group">
          <label for="title"><b>Producto</b></label>
          <input
            id="title"
            class="form-control"
            type="text"
            name="title"
            required
          />
        </div>

        <!-- Campo precio del producto -->
        <div class="form-group">
          <label for="price"><b>Precio</b></label>
          <input
            id="price"
            class="form-control"
            type="number"
            name="price"
            required
          />
        </div>

        <!-- Campo url de la foto del producto -->
        <div class="form-group">
          <label for="thumbnail"><b>Foto Url</b></label>
          <input
            id="thumbnail"
            class="form-control"
            type="url"
            name="thumbnail"
            required
          />
        </div>

        <!-- Botón de envío -->
        <button id="enviar" class="btn btn-success mt-3 mb-5">Enviar</button>
      </form>
    </div>
    
    <div class="jumbotron">

      <h2 style="color: crimson">Productos</h2>
      <%- include('./partials/table.ejs', productos)-%>
      
      
    </div>
    <div class="jumbotron">

    <h2 style="color: crimson">Chat de Usuarios</h2>
    <%- include('./partials/chat.ejs')-%>
    <%- include('./partials/footer.ejs')-%>
    </div>
  </div>
</body>
